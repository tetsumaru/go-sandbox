{
    "extends": [
        "config:base",
        "github>whitesource/merge-confidence:beta"
    ],
    "hostRules": [
        {
            "matchHost": "github.com",
            "token": "${{ PAT }}",
            "hostType": "github"
        }
    ],
    "repositories": [
        {
            "repository": "https://github.com/tetsumaru/go-private-sandbox",
            "packageFile": "go.mod",
            "packageManager": "gomod"
        }
    ],
    "postUpdateOptions": [
        "gomodTidy"
    ]
}
